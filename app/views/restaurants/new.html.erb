<h1>New Restaurant</h1>

<%= form_for :restaurant, url: restaurants_path do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :pricerange %><br>
		<%= f.text_field :pricerange %>
	</p>

	<p>
		<%= f.label :address %><br>
		<%= f.text_area :address %>
	</p>

	<p>
		<%= f.label :cuisine %><br>
		<%= f.text_field :cuisine %>
	</p>

	<p>
		<%= f.label :summary %><br>
		<%= f.text_area :summary %>
	</p>

	<p>
		<%= f.label :capacity %><br>
		<%= f.text_field :capacity %>
	</p>

	<p>
		<%= f.label :menu %><br>
		<%= f.text_area :menu %>
	<p>

	<p>
		<%= f.submit %>
	</p>

	<% end %>